      button#searchBtn(type='button', class='btn btn-default btn-lg align-center ml-2') 검색
    table#users(class='table form-table table-bordered')
      thead(class='bg-warning align-middle')
        th 고객이름
        th 휴대폰번호
        th 남은 오일양
        th 차량번호
      tbody
      
  block scripts
    include ../../../scripts/user_script.pug