script.

    async function searchUser(){
        try{
                const userName = document.querySelector('#keyword').value
                console.log('userName:', userName)
                const result =  await axios.get(`/shop/user/searchUser?userName=${userName}`)
                console.log('result:', result)
                if(result){
                        document.location.href = `/shop/user/searchUser/list?userName=${result.data[0].NAME}`
                }else{
                        alert('찾으시는 라이더가 없습니다. 다시 확인하세요')
                }

        }catch(err){
                console.error(err)
        }
    }

    async function goToSaveUser(){
        let frm = document.getElementById('listForm');
        console.log(frm);
        frm.setAttribute("action", "/shop/user/registerUser");
        frm.submit();
    }

    async function goToUpdateUser(){
        try{
                document.location.href = `/shop/user/updateUser`
        }catch(err){
                console.error(err);
        }
    }